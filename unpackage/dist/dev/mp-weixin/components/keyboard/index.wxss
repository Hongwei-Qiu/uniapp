.flex, .keyboard, .keyboard .left, .keyboard .left .shanchu {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.small_font {
  font-size: 24rpx;
}
.inputval {
  background: white;
}
.smaller_font {
  font-size: 20rpx;
}
.height, .keyboard .left .num, .keyboard .right .option_button {
  height: 80rpx;
  line-height: 80rpx;
}
.green_b, .keyboard .right .option_button {
  background: #009a44;
}
.width {
  width: 100%;
}
.inputval {
  padding: 0 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.inputval .getval {
  height: 120rpx;
  line-height: 120rpx;
}
.my_keyboard {
  font-size: 32rpx;
}
.keyboard {
  padding-bottom: 20rpx;
  background: #f7f6f6;
  z-index: 9998;
}
.keyboard .left {
  width: 75%;
  margin: 0 20rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.keyboard .left .num {
  margin: 20rpx 0 0;
  width: 165rpx;
  text-align: center;
  border-radius: 2px;
  background: white;
}
.keyboard .left .shanchu {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.keyboard .left .shanchu .delte {
  width: 50%;
  height: 40rpx;
  line-height: 60rpx;
}
.keyboard .right {
  width: 25%;
}
.keyboard .right .option_button {
  width: 80%;
  margin: 20rpx 0 0;
  width: 165rpx;
  text-align: center;
  color: white;
}
.determine {
  height: 180rpx !important;
  line-height: 180rpx !important;
}

