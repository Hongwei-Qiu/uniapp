<view class="flash_sale"><uni-nav-bar vue-id="15e8182b-1" left-icon="arrowleft" title="限时抢购" status-bar="{{navBar}}" fixed="true" data-event-opts="{{[['^clickLeft',[['leftClick']]]]}}" onClickLeft="__e" onVueInit="__l"></uni-nav-bar><view class="time_stage"><image src="../../static/img/secondsha.png"></image><view class="single_stage"><block a:for="{{activeList}}" a:for-item="item" a:for-index="index" a:key="index"><view data-event-opts="{{[['tap',[['selectStage',[index]]]]]}}" class="{{(index==kind?'active_back':'')}}" onTap="__e"><view class="twelve"><block a:if="{{item.status==1}}"><text>距离结束</text></block><block a:else><text>即将开始</text></block></view><block a:if="{{item.status==1}}"><view><uni-countdown vue-id="{{'15e8182b-2-'+index}}" hour="{{item.timeRemain/3600}}" minute="{{minute}}" second="{{second}}" show-day="{{false}}" background-color="none" splitor-color="white" onVueInit="__l"></uni-countdown></view></block><block a:else><view class="ten" style="hieght:42rpx;line-height:42rpx;">{{item.day+' '+item.hour}}</view></block></view></block></view><view class="square"><block a:for="{{activeList}}" a:for-item="item" a:for-index="index"><view><view class="{{(index==kind?'show_square':'')}}"></view></view></block></view></view><view class="all_things"><block a:for="{{list}}" a:for-item="item" a:for-index="index" a:key="index"><view class="flex single_good"><view data-event-opts="{{[['tap',[['detailPage',['$0'],[[['list','',index,'item_id']]]]]]]}}" class="photo" onTap="__e"><block a:if="{{config.logo&&config.shuiyin==1}}"><image class="shuiyin" src="{{config.logo}}" mode="aspectFit"></image></block><view style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;"><block a:if="{{item.activity_num<=item.cart_num}}"><view class="show_text">抢光了</view></block><image class="good_img" src="{{item.img==''?imgRemote+config.item_default:item.img}}" mode="aspectFit"></image></view></view><view data-event-opts="{{[['tap',[['detailPage',['$0'],[[['list','',index,'item_id']]]]]]]}}" class="good_info" onTap="__e"><view>{{item.item_title}}</view><view class="gray_font twelve">{{item.attr_title}}</view><view><view class="align_center"><text class="red_tag">爆品</text><view class="distance align_center"><text class="red_tag">省</text><text class="red_font">{{item.difference+"元"}}</text></view><block a:if="{{item.activity_num<=item.cart_num}}"><text class="gray_font">剩余:0个</text></block><block a:if="{{item.activity_num>item.cart_num}}"><text class="gray_font">{{"剩余:"+(item.activity_num-item.cart_num)+"个"}}</text></block></view><view><text class="red_font">{{"¥"+item.activity_price+"/"+item.unit}}</text><text class="line_through ten">{{"￥"+item.price}}</text></view></view><block a:if="{{item.num_limit!=0&&item.activity_num<=item.cart_num}}"><view class="num_limit"><text>{{"限购"+item.num_limit+"已恢复原价"}}</text></view></block></view><view class="good_num"><block a:if="{{activeList[kind].status==1}}"><block><block a:if="{{item.activity_num>item.cart_num}}"><view class="buy_num"><block a:if="{{item.cart_num==0}}"><image class="plus" src="../../static/img/plus.png" data-event-opts="{{[['tap',[['plusSing',['$0',index],[[['list','',index]]]]]]]}}" onTap="__e"></image></block><block a:else><block><my-stepper vue-id="{{'15e8182b-3-'+index}}" val="{{item.cart_num}}" data-event-opts="{{[['^showKey',[['showKey',['$0',index],[[['list','',index]]]]]],['^plus',[['plus',['$0',item.cart_num+1,index],[[['list','',index]]]]]],['^minus',[['minus',['$0',item.cart_num-1,index],[[['list','',index]]]]]]]}}" onShowKey="__e" onPlus="__e" onMinus="__e" onVueInit="__l"></my-stepper></block></block></view></block><block a:else><view class="no_num"><text>已抢完</text></view></block></block></block><block a:else><block><view class="no_num"><text>即将开始</text></view></block></block></view></view></block><my-loading vue-id="15e8182b-4" onVueInit="__l"></my-loading></view><my-backtop vue-id="15e8182b-5" bottom="10" showTop="{{showTop}}" onVueInit="__l"></my-backtop><uni-popup vue-id="15e8182b-6" type="bottom" ref="__r" data-ref="popup" onVueInit="__l"><my-keyboard vue-id="{{('15e8182b-7')+','+('15e8182b-6')}}" arrObj="{{arrObj}}" data-event-opts="{{[['^cancelKey',[['e0']]],['^toParent',[['toParent']]]]}}" onCancelKey="__e" onToParent="__e" onVueInit="__l"></my-keyboard></uni-popup></view>