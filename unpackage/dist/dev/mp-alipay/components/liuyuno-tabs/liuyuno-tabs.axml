<block a:if="{{tabList.length>0}}"><view class="tab-box" id="tab-box"><view class="horizontal"><scroll-view style="white-space:nowrap;display:flex;" scroll-x="{{true}}" scroll-with-animation scroll-left="{{slider.scrollLeft}}"><block a:for="{{tabList}}" a:for-item="item" a:for-index="index" a:key="index"><block><view class="{{(('item')+' '+((activeIndex===index)?'active':''))}}" id="{{'tab_'+index}}" data-event-opts="{{[['tap',[['tabClick',[index]]]]]}}" onTap="__e">{{item.name||item}}</view></block></block><view class="underline" style="{{('transform:translateX('+slider.left+'px);width:'+slider.width+'px')}}"></view></scroll-view></view></view></block>